{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "rootDir": "src",
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            "@/tests/*": ["../tests/*"]
        },
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true /* Disable resolving symlinks to their realpath. This correlates to the same flag in node. */,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["src", "tests"]
}
