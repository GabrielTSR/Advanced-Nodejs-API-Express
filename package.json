{
    "name": "advanced-node",
    "version": "1.0.0",
    "main": "index.js",
    "author": "GabrielTSR <gabrielalvesrocha22@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig-build.json",
        "start": "node -r dotenv/config dist/main",
        "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config --inspect=0.0.0.0:9229 src/main",
        "build:s": "rimraf dist && tsc -p tsconfig-build.json && node dist/main",
        "lint": "eslint .",
        "lint:fix": "npm run lint -- --fix",
        "test": "jest --passWithNoTests --no-cache --runInBand",
        "test:watch": "npm test -- --watch",
        "test:staged": "npm test -- --findRelatedTests ./src/main/config/module-alias",
        "test:coverage": "npm test -- --coverage",
        "test:fb-api": "npm test -- -c ./jest.integration.config.js tests/external/facebook-api.test.ts",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@jest-mock/express": "^2.0.1",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^28.1.7",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/module-alias": "^2.0.1",
        "@types/node": "^18.7.5",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "eslint": "^8.22.0",
        "eslint-config-standard-with-typescript": "^22.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.2.4",
        "eslint-plugin-promise": "^6.0.0",
        "husky": "^8.0.1",
        "jest": "^28.1.3",
        "jest-mock-extended": "^2.0.7",
        "lint-staged": "^13.0.3",
        "pg-mem": "^2.6.3",
        "supertest": "^6.2.4",
        "ts-jest": "^28.0.8",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.7.4"
    },
    "engines": {
        "node": "16.x"
    },
    "dependencies": {
        "axios": "^0.27.2",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "fast-glob": "^3.2.11",
        "jsonwebtoken": "^8.5.1",
        "module-alias": "^2.2.2",
        "pg": "^8.7.3",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "typeorm": "0.2.29"
    }
}
